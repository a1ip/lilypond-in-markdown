<!doctype html>
<html lang="en">
	<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }}{% endif %}</title>
    {# <link rel="stylesheet" href="{{ '/css/prism-okaidia.css' | url }}"> #}
    {# <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}"> #}
    <link rel="stylesheet" href="{{ '/css/lilypond.css' | url }}">
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet">
    {%- typographyFonts 'xxx' -%}
    {# TypographyJS has a bug that does not actually output the theme #}
    {# For now the theme is a copy and paste of the correct output in a separate CSS file #}
    {# {%- typography 'xxx' -%} #}
    <link rel="stylesheet" href="{{ '/css/lincoln.css' | url }}">
    {# <link rel="stylesheet" href="{{ '/css/funston.css' | url }}"> #}
    <style>
      main {
        max-width: 45em;
        margin: 2em auto;
        padding: 1em 1.5em 0.5em 1.5em;
        border-radius: 4px;
        background-color: white;
      }
      body {
        background-color: #FF8300;
        background-image: linear-gradient(#FF8300, #00BB3F, #1531AE);
        padding: 0.5em;
      }
      .lilypond {
        margin-bottom: 2em;
      }
      .lilypond svg,
      .lilypond svg > a,
      .lilypond path,
      .lilypond rect {
        color: #222 !important;
      }
      /* LILYPOND CODE HIGHLIGHT */
      /* MONOKAI COLORS */
      /*
        pink: #FF6188;
        green: #A9DC76;
        yellow: #FFD866; 
        orange: #FC9867;
        purple: #AB9DF2
        blue: #78DCE8;
      */

      /* Dark Theme */
    </style>
	</head>
	<body>

    <div id="main-content" class="main-content">

      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </main>

      <footer></footer>
    </div>
	</body>
</html>
