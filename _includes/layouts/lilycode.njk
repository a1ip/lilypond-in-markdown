<!doctype html>
<html lang="en">
	<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }}{% endif %}</title>
    <link rel="stylesheet" href="{{ '/css/lilypond.css' | url }}">
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet">
    {%- typographyFonts 'xxx' -%}
    {%- typography 'xxx' -%}
    <style>
      main {
        max-width: 45em;
        margin: 2em auto;
        padding: 1em 1.5em 0.5em 1.5em;
        border-radius: 4px;
        background-color: white;
      }
      body {
        background-color: #FF8300;
        background-image: linear-gradient(#FF8300, #00BB3F, #1531AE);
        padding: 0.5em;
      }
      .lilypond {
        margin-bottom: 2em;
      }
      .lilypond svg,
      .lilypond svg > a,
      .lilypond path,
      .lilypond rect {
        color: #222 !important;
      }
    </style>
	</head>
	<body>

    <div id="main-content" class="main-content">

      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </main>

      <footer></footer>
    </div>
	</body>
</html>
